Xft.dpi: 72
Xft.antialias: true
Xft.rgba: rbg
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.autohint: false
Xft.lcdfilter: lcddefault

URxvt.allow_bold: true
URxvt.transparent: true
URxvt.shading: 15
URxvt.saveLines: 50000

! Perl
URxvt.perl-ext-common: default,matcher,clipboard-osc,xim-onthespot,selection-to-clipboard

! Molokai theme
URxvt.background: #101010
URxvt.foreground: #d0d0d0
URxvt.color0: #101010
URxvt.color1: #960050
URxvt.color2: #66aa11
URxvt.color3: #c47f2c
URxvt.color4: #30309b
URxvt.color5: #7e40a5
URxvt.color6: #3579a8
URxvt.color7: #9999aa
URxvt.color8: #303030
URxvt.color9: #ff0090
URxvt.color10: #80ff00
URxvt.color11: #ffba68
URxvt.color12: #5f5fee
URxvt.color13: #bb88dd
URxvt.color14: #4eb4fa
URxvt.color15: #d0d0d0

! Font
URxvt.font: xft:Ricty:size=18:antialias=true
URxvt.boldFont: xft:Ricty:Bold:size=18:antialias=true
URxvt.italicFont: xft:Ricty:Bold:size=18:antialias=true
URxvt.boldItalicFont: xft:Ricty:Bold:size=18:antialias=true

! Input method
URxvt.inputMethod: fcitx
URxvt.preeditType: OnTheSpot

! Click url
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

! Clipboard
URxvt.clipboard.autocopy: true
